{
  "compilerOptions": {
    "outDir": "./script/",
    "rootDir": "./src",
    "baseUrl": "./",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["node_modules/@types", "./global-defenitions"],
    "moduleResolution": "node",
    "paths": {
      "tslib": ["node_modules/tslib/tslib.d.ts"]
    }
  },
  "include": [
    "./src/**/*",
    "./src/types/externals/*",
    "./global-defenitions/**/*.d.ts"
  ],
  "exclude": ["node_modules"]
}
